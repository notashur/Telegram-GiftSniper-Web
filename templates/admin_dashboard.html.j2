        <script>
            function showNotification(message, type = 'info', duration = 5000) {
                const container = document.getElementById('notification-container');
                if (!container) return;

                const notification = document.createElement('div');
                notification.className = `notification ${type}`;

                const icons = {
                    success: 'fas fa-check-circle',
                    error: 'fas fa-exclamation-circle',
                    warning: 'fas fa-exclamation-triangle',
                    info: 'fas fa-info-circle'
                };

                notification.innerHTML = `
                <i class="notification-icon ${icons[type] || icons.info}"></i>
                <span>${message}</span>
                <span class="notification-close" onclick="this.parentElement.remove()">
                    <i class="fas fa-times"></i>
                </span>
            `;

                container.appendChild(notification);

                if (duration > 0) {
                    setTimeout(() => {
                        notification.style.animation = 'fadeOut 0.3s ease-out forwards';
                        setTimeout(() => notification.remove(), 300);
                    }, duration);
                }

                return notification;
            }
        </script>
        <script>
            // Proxy management functions
            function refreshProxyStats() {
                fetch('/admin/proxy_stats')
                    .then(response => response.json())
                    .then(data => {
                        if (data.status === 'success') {
                            document.getElementById('proxy-total').textContent = data.stats.total;
                            document.getElementById('proxy-available').textContent = data.stats.available;
                            document.getElementById('proxy-in-use').textContent = data.stats.in_use;
                        }
                    });

                loadProxyList();
            }

            function loadProxyList() {
                fetch('/admin/proxies')
                    .then(response => response.json())
                    .then(data => {
                        if (data.status === 'success') {
                            const proxyList = document.getElementById('proxy-list');
                            proxyList.innerHTML = '';

                            data.proxies.forEach(proxy => {
                                const row = document.createElement('tr');
                                row.className = 'hover:bg-gray-600';

                                const statusBadge = proxy.in_use
                                    ? `<span class="badge badge-warning">In Use (${proxy.used_by || 'unknown'})</span>`
                                    : '<span class="badge badge-success">Available</span>';

                                row.innerHTML = `
                            <td class="px-2 py-1 text-sm text-gray-300">
                                ${proxy.host}:${proxy.port}
                                ${proxy.username ? `<div class="text-xs text-gray-400">${proxy.username}</div>` : ''}
                            </td>
                            <td class="px-2 py-1 text-sm">
                                ${statusBadge}
                            </td>
                            <td class="px-2 py-1 text-sm">
                                <button onclick="removeProxy('${proxy.host}', ${proxy.port})" 
                                    class="text-red-400 hover:text-red-300 mr-2" title="Remove">
                                    <i class="fas fa-trash"></i>
                                </button>
                                <button onclick="testProxy('${proxy.host}', ${proxy.port})" 
                                    class="text-blue-400 hover:text-blue-300" title="Test">
                                    <i class="fas fa-check"></i>
                                </button>
                            </td>
                        `;

                                proxyList.appendChild(row);
                            });
                        }
                    });
            }

            function addProxy() {
                const host = document.getElementById('proxy-host').value;
                const port = document.getElementById('proxy-port').value;
                const username = document.getElementById('proxy-username').value;
                const password = document.getElementById('proxy-password').value;

                if (!host || !port) {
                    showNotification('Host and port are required', 'error');
                    return;
                }

                fetch('/admin/proxies', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        action: 'add',
                        host: host,
                        port: parseInt(port),
                        username: username,
                        password: password
                    })
                })
                    .then(response => response.json())
                    .then(data => {
                        if (data.status === 'success') {
                            showNotification('Proxy added successfully', 'success');
                            document.getElementById('proxy-host').value = '';
                            document.getElementById('proxy-port').value = '';
                            document.getElementById('proxy-username').value = '';
                            document.getElementById('proxy-password').value = '';
                            refreshProxyStats();
                        } else {
                            showNotification('Error: ' + data.message, 'error');
                        }
                    });
            }

            function removeProxy(host, port) {
                if (!confirm(`Are you sure you want to remove proxy ${host}:${port}?`)) {
                    return;
                }

                fetch('/admin/proxies', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        action: 'remove',
                        host: host,
                        port: port
                    })
                })
                    .then(response => response.json())
                    .then(data => {
                        if (data.status === 'success') {
                            showNotification('Proxy removed successfully', 'success');
                            refreshProxyStats();
                        } else {
                            showNotification('Error: ' + data.message, 'error');
                        }
                    });
            }

            function testProxy(host, port) {
                showNotification('Proxy testing not implemented yet', 'info');
            }

            // Load proxy stats when page loads
            document.addEventListener('DOMContentLoaded', refreshProxyStats);
        </script>
